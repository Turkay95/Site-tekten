<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Composants</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/components/add" class="btn btn-sm btn-outline-success">
            <i class="bi bi-plus-circle"></i> Ajouter un composant
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <% if (components && components.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Nom</th>
                            <th>Type</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% components.forEach(c => { %>
                            <tr>
                                <td>
                                    <% if (c.image) { %>
                                        <img src="<%= c.image %>" alt="<%= c.name %>" 
                                             style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                                    <% } else { %>
                                        <div class="bg-light d-flex align-items-center justify-content-center" 
                                             style="width: 50px; height: 50px; border-radius: 4px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    <% } %>
                                </td>
                                <td><%= c.name %></td>
                                <td><span class="badge bg-secondary"><%= c.type %></span></td>
                                <td><%= (c.price || 0).toFixed(2) %> €</td>
                                <td>
                                    <span class="badge <%= (c.stock||0) > 0 ? 'bg-success' : 'bg-danger' %>">
                                        <%= c.stock || 0 %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/admin/components/<%= c.id %>/edit" class="btn btn-outline-success" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form action="/admin/components/<%= c.id %>?_method=DELETE" method="POST" class="d-inline"
                                              onsubmit="return confirm('Supprimer ce composant ?')">
                                            <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                <h5 class="mt-3">Aucun composant trouvé</h5>
                <p class="text-muted">Ajoutez votre premier composant</p>
                <a href="/admin/components/add" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Ajouter un composant
                </a>
            </div>
        <% } %>
    </div>
</div>
